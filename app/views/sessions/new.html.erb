<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-3">
    <%= form_for(:session, url: login_path, :html => {:class => "form new-user-form"}) do |f| %>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.check_box :remember_me %><span class="checkbox-label">Remember me</span>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
      <span class="new-user-signup">New user? <%= link_to "Sign up now!", signup_path %></span>
    <% end %>
  </div>
</div>
