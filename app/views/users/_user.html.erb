<li>
  <%= gravatar_for user %>
  <%= link_to user.name, user %>
	<% if !current_user?(user) %>
	<% if !user.verified? %>
	| <%= link_to "Deny Access", user, method: :verify, data: { confirm: "You sure?" } %>
	<% else %>
	| <%= link_to "Grant Access", user, method: :verify, data: { confirm: "You sure?" } %>
	<% end %>
    | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
	<% end %>
</li>