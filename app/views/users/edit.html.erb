<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

	  <% if current_user.isadmin? && !current_user?(@user) %>
	  <%= f.label :verified %>
	  <%= f.check_box :verified, class: 'form-control', 'verified' => 'true', 'verified' => 'false' %>
	  <% end %>
	  
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
	  
	  <%= f.label :address %>
	  <%= f.text_field :address, class: 'form-control' %>
	  
	  <%= f.label :organization %>
	  <%= f.text_field :organization, class: 'form-control' %>
	  
	  <%= f.label :insuranceprovider, "Insurance Provider" %>
	  <%= f.text_field :insuranceprovider, class: 'form-control' %>
	  
	  <%= f.label :policynum, "Insurance Policy Number" %>
	  <%= f.text_field :policynum, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target=_blank>change</a>
    </div>
  </div>
</div>