<% provide(:title, @user.name) %>
<% if ((current_user.isadmin?()) || (current_user(@user))) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
</div>
<% else %>
<h1>Insufficient privileges.</h1>
<% end %>